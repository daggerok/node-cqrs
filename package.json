{
  "name": "node-cqrs",
  "version": "0.0.3",
  "description": "node CQRS eventsourcing rabbitmq mongodb",
  "main": "./bin/swarm-up.bash",
  "author": "daggerok",
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.18.2",
    "express": "4.15.5",
    "mongodb": "2.2.31",
    "mongoose": "4.11.13",
    "morgan": "1.8.2",
    "servicebus": "2.0.10",
    "servicebus-register-handlers": "0.1.7",
    "servicebus-retry": "0.0.11",
    "servicebus-trace": "0.0.1",
    "uuid": "3.1.0",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "@types/express": "4.0.37",
    "@types/mongoose": "4.7.23",
    "@types/node": "8.0.31",
    "@types/whatwg-fetch": "0.0.33",
    "cross-env": "5.0.5",
    "livereload": "0.6.2",
    "nodemon": "1.12.1",
    "npm-run-all": "4.1.1"
  },
  "scripts": {
    "composeUp": "docker-compose -f docker/docker-compose.yml up -d --build",
    "composeAllUp": "bash ./bin/compose-up.bash",
    "swarmUp": "bash ./bin/swarm-up.bash",
    "start": "npm-run-all -p start:*",
    "start:livereload": "livereload",
    "start:message-frontend": "cross-env NODE_ENV=development MESSAGE_FRONTEND_PORT=3000 nodemon ./message-frontend -w ./message-frontend",
    "start:message-command": "cross-env NODE_ENV=development MESSAGE_COMMAND_PORT=3001 nodemon ./message-command -w ./message-command",
    "start:message-store": "cross-env NODE_ENV=development MESSAGE_STORE_PORT=3002 nodemon ./message-store -w ./message-store",
    "composeDown": "docker-compose -f docker/docker-compose.yml down -v",
    "composeAllDown": "bash ./bin/compose-down.bash",
    "swarmDown": "bash ./bin/swarm-down.bash",
    "cleanup": "bash ./bin/cleanup.bash"
  },
  "livereload": {
    "exclusions": [
      "bower_components",
      "node_modules",
      "*.json",
      "README.*",
      "yarn.lock"
    ]
  }
}
